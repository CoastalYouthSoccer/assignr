{%- if misconducts -%}
<h1>Misconduct Report ({{ start_date }} - {{ end_date }})</h1>
{%- for misconduct in misconducts -%}
<h2>Game Information</h2>
<table>
  <tr>
    <td><b>Reported By:</b></td>
    <td>{{ misconduct['author'] }}</td>
  </tr>
  <tr>
    <td><b>Date/Time:</b></td>
    <td>{{ misconduct['game_dt'] | format_mm_dd_yyyy }} @ {{ misconduct['game_dt'] | format_hh_mm }}</td>
  </tr>
  <tr>
    <td><b>Age Group/Gender:</b></td>
    <td>{{ misconduct['age_group'] }} - {{ misconduct['gender'] }}</td>
  </tr>
  <tr>
    <td><b>Venue:</b></td>
    <td>{{ misconduct['venue_subvenue'] }}</td>
  </tr>
</table>
<h3>Team Information</h3>
<table>
  <tr>
    <th>Home/Away</th>
    <th>Team</th>
    <th>Score</th>
    <th>Coach</th>
  </tr>
  <tr>
    <td>Away</td>
    <td>{{ misconduct['away_team'] }}</td>
    <td style="text-align:center;">{{ misconduct['away_team_score'] }}</td>
    <td>{{ misconduct['away_coach'] }}</td>
  </tr>
  <tr>
    <td>Home</td>
    <td>{{ misconduct['home_team'] }}</td>
    <td style="text-align:center;">{{ misconduct['home_team_score'] }}</td>
    <td>{{ misconduct['home_coach'] }}</td>
  </tr>
</table>
<h2>Officials</h2>
{%- for official in misconduct['officials'] -%}
<p>{{ official['position'] }} - {{ official['name'] }}</p>
{%- endfor -%}
<h2>Misconduct Details</h2>
<table>
  <tr>
    <th>Result</th>
    <th>Name</th>
    <th>Coach/Player</th>
    <th>Pass Id/#</th>
    <th>Team</th>
    <th>Minute</th>
    <th>Offense</th>
    <th>Description</th>
  </tr>
  <tr>
  {%- for offense in misconduct['misconducts'] -%}
    <td>{{ offense['caution_send_off'] | upper }}</td>
    <td>{{ offense['name'] }}</td>
    <td style="text-align:center;">{{ offense['role'] | upper }}</td>
    <td style="text-align:center;">{{ offense['pass_number']  }}</td>
    <td>{{ offense['team'] | upper }}</td>
    <td style="text-align:center;">{{ offense['minute'] }}</td>
    <td style="text-align:center;">{{ offense['offense']  }}</td>
    <td>{{ offense['description'] }}</td>
  </tr>
{%- endfor -%}
</table>
<hr style="width:75%;text-align:left;margin-left:0">
{%- endfor -%}
{%- else -%}
<p><strong>No Misconducts issued</strong></p>
{%- endif -%}
